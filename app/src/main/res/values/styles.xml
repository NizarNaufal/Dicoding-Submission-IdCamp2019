<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
   <style name = "TextBasic" parent = "TextAppearance.AppCompat.Medium">
    <item name = "android:fontFamily">@font/noto_sans</item>
    <item name = "android:textColor">@color/colorTextGrey</item>
    <item name = "android:textSize">14sp</item>
</style>
    <style name = "TextBasic.Bold">
        <item name = "android:fontFamily">@font/noto_sans_bold</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@android:color/black</item>
    </style>
</resources>